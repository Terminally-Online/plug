{
    "files": {
        "ignore": [
            "CHANGELOG.md",
            "pnpm-lock.yaml",
            "tsconfig.json",
            "tsconfig.*.json"
        ]
    },
    "formatter": {
        "enabled": true,
        "formatWithErrors": false,
        "indentStyle": "space",
        "indentSize": 4,
        "lineWidth": 80
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "complexity": {
                "all": true
            },
            "correctness": {
                "noUnusedVariables": "error"
            },
            "nursery": {
                "noBannedTypes": "off",
                "useExhaustiveDependencies": "error",
                "useGroupedTypeImport": "off"
            },
            "performance": {
                "noDelete": "off"
            },
            "style": {
                "noNonNullAssertion": "off",
                "useShorthandArrayType": "error"
            },
            "suspicious": {
                "noArrayIndexKey": "off",
                "noExplicitAny": "off",
                "noRedeclare": "off"
            }
        }
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "single",
            "trailingComma": "all",
            "semicolons": "asNeeded"
        }
    },
    "organizeImports": {
        "enabled": true
    },
    "vcs": {
        "enabled": true,
        "clientKind": "git",
        "useIgnoreFile": true
    }
}
