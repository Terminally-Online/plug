{
	"name": "@nftchance/plug-core",
	"version": "0.2.6",
	"license": "MIT",
	"scripts": {
		"prebuild": "pnpm lint && rm -rf ./dist",
		"build": "pnpm build:ts && pnpm build:contracts",
		"build:artifacts": "pnpm tsx src/lib/functions/artifacts.ts",
		"build:contracts": "pnpm plug generate && pnpm build:artifacts",
		"build:etcher": "pnpm run build:artifacts && pnpm tsx src/lib/functions/etcher.ts",
		"build:forge": "forge fmt && forge build --out='artifacts' --contracts='./src/contracts' --via-ir --optimize --optimizer-runs=10000 --use=0.8.24",
		"build:format": "pnpm prettier --write .",
		"build:mine": "pnpm run build:artifacts && pnpm tsx src/lib/functions/mine.ts",
		"build:mine:quick": "pnpm run build:artifacts && pnpm tsx src/lib/functions/mine.ts --quick --leading=1 --total=2 --force",
		"build:ts": "pnpm tsup && pnpm build:format",
		"lint": "tsc",
		"dev": "npm-run-all -p dev:*",
		"dev:contracts": "nodemon --watch \"src/contracts/**\" --ext \"sol\" --exec \"forge test -vvv --via-ir && forge coverage --report lcov && genhtml -o report lcov.info --branch-coverage\"",
		"dev:package": "pnpm tsup --watch"
	},
	"devDependencies": {
		"@changesets/cli": "^2.27.1",
		"@prb/test": "^0.6.4",
		"@trivago/prettier-plugin-sort-imports": "^4.3.0",
		"@types/chai": "^4.3.12",
		"@types/chai-as-promised": "^7.1.8",
		"@types/fs-extra": "^11.0.4",
		"@types/mocha": "^10.0.6",
		"@types/node": "^20.11.25",
		"@wagmi/cli": "^2.1.2",
		"chai": "^5.1.0",
		"dedent": "^1.5.1",
		"ds-test": "github:dapphub/ds-test",
		"execa": "^8.0.1",
		"forge-std": "github:foundry-rs/forge-std#v1",
		"fs-extra": "^11.2.0",
		"nodemon": "^3.1.0",
		"npm-run-all": "^4.1.5",
		"prettier": "^3.2.5",
		"solhint": "^4.1.1",
		"solidity-coverage": "^0.8.11",
		"tsconfig-paths": "^4.2.0",
		"tsup": "^8.0.2",
		"tsx": "^4.7.1",
		"typescript": "~5.4.2"
	},
	"dependencies": {
		"@nftchance/plug-types": "^0.9.5",
		"abitype": "^1.0.1",
		"solady": "^0.0.175",
		"viem": "^2.7.19",
		"wagmi": "^2.5.7"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/nftchance/plug-core.git"
	},
	"keywords": [
		"eip712",
		"typehash",
		"signatures",
		"eth",
		"ethereum",
		"solidity",
		"crypto",
		"intent",
		"plugs",
		"plug"
	],
	"main": "dist/index.js",
	"module": "dist/index.mjs",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./dist/index.js"
		},
		"./core": {
			"types": "./dist/core/index.d.ts",
			"default": "./dist/core/index.js"
		},
		"./lib": {
			"types": "./dist/lib/index.d.ts",
			"default": "./dist/lib/index.js"
		},
		"./artifacts": {
			"types": "./artifacts/artifacts.d.ts"
		},
		"./package.json": "./package.json",
		"./addresses.json": "./src/lib/addresses.json"
	},
	"files": [
		"/core",
		"/lib",
		"/dist",
		"/src",
		"/artifacts"
	],
	"publishConfig": {
		"access": "public"
	}
}
