{
	"name": "@nftchance/plug-core",
	"license": "BUSL-1.1",
	"version": "0.2.5",
	"repository": {
		"type": "git",
		"url": "https://github.com/nftchance/plug-core.git"
	},
	"keywords": [
		"nftchance",
		"eip712",
		"typehash",
		"signatures",
		"eth",
		"ethereum",
		"solidity",
		"crypto",
		"intent",
		"plugs",
		"plug"
	],
	"main": "dist/index.js",
	"module": "dist/index.mjs",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./dist/index.js"
		},
		"./core/plug": {
			"types": "./dist/core/plug.d.ts",
			"default": "./dist/core/plug.js"
		},
		"./core/sdk": {
			"types": "./dist/core/sdk.d.ts",
			"default": "./dist/core/sdk.js"
		},
		"./artifacts": {
			"types": "./artifacts/artifacts.d.ts"
		},
		"./package.json": "./package.json"
	},
	"files": [
		"/core",
		"/dist",
		"/src",
		"/artifacts"
	],
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"__BUILD__": "",
		"prebuild": "pnpm lint && rm -rf ./dist",
		"build": "pnpm build:ts && pnpm build:contracts",
		"build:contracts": "BUILD=true pnpm hardhat clean && BUILD=true pnpm hardhat compile",
		"build:ts": "pnpm tsup && pnpm format",
		"format": "pnpm prettier --write .",
		"lint": "tsc",
		"__DEV__": "",
		"dev": "pnpm tsup --watch",
		"__CI__": "",
		"ci:release": "pnpm publish -r",
		"ci:version": "changeset version",
		"ci:publish": "changeset publish"
	},
	"devDependencies": {
		"@changesets/cli": "^2.26.2",
		"@nomicfoundation/hardhat-network-helpers": "^1.0.10",
		"@nomicfoundation/hardhat-toolbox": "^3.0.0",
		"@nomicfoundation/hardhat-toolbox-viem": "^1.0.0",
		"@nomicfoundation/hardhat-verify": "^1.0.0",
		"@nomicfoundation/hardhat-viem": "^1.0.1",
		"@trivago/prettier-plugin-sort-imports": "^4.2.1",
		"@types/chai": "^4.3.11",
		"@types/chai-as-promised": "^7.1.6",
		"@types/fs-extra": "^11.0.3",
		"@types/mocha": ">=10.0.6",
		"@types/node": "^20.8.9",
		"chai": "^4.2.0",
		"dedent": "^1.5.1",
		"execa": "^8.0.1",
		"fs-extra": "^11.1.1",
		"hardhat": "^2.19.2",
		"hardhat-gas-reporter": "^1.0.8",
		"prettier": "^3.0.3",
		"solidity-coverage": "^0.8.0",
		"tsconfig-paths": "^4.2.0",
		"tsup": "^8.0.1",
		"typescript": "~5.0.4"
	},
	"dependencies": {
		"@nftchance/plug-types": "^0.5.2",
		"abitype": "^0.10.3",
		"solady": "^0.0.145",
		"tsx": "^4.1.3",
		"viem": "^1.19.11"
	},
	"peerDependencies": {
		"abitype": ">=0.10.2",
		"solady": ">=0.0.132",
		"typescript": ">=5.0.4",
		"viem": ">=1.18.3"
	},
	"peerDependenciesMeta": {
		"typescript": {
			"optional": true
		}
	}
}
